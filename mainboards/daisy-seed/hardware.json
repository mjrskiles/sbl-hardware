    "manifestVersion": "1.0.0",
    "revision": "1.0",
    "mcu": "mcu/arm/stm32h750"
  },

  "exposes": {
    "gpio": {
      "d0":  { "mcu_pin": "PB12", "functions": ["gpio", "spi", "i2c"] },
      "d1":  { "mcu_pin": "PC11", "functions": ["gpio", "spi", "uart"] },
      "d2":  { "mcu_pin": "PC10", "functions": ["gpio", "spi", "uart"] },
      "d3":  { "mcu_pin": "PC9",  "functions": ["gpio", "i2c"] },
      "d4":  { "mcu_pin": "PC8",  "functions": ["gpio"] },
      "d5":  { "mcu_pin": "PD2",  "functions": ["gpio", "uart"] },
      "d6":  { "mcu_pin": "PC12", "functions": ["gpio", "spi", "uart"] },
      "d7":  { "mcu_pin": "PG10", "functions": ["gpio", "spi"] },
      "d8":  { "mcu_pin": "PG11", "functions": ["gpio", "spi"] },
      "d9":  { "mcu_pin": "PB4",  "functions": ["gpio", "spi"] },
      "d10": { "mcu_pin": "PB5",  "functions": ["gpio", "spi"] },
      "d11": { "mcu_pin": "PB8",  "functions": ["gpio", "i2c"] },
      "d12": { "mcu_pin": "PB9",  "functions": ["gpio", "i2c"] },
      "d13": { "mcu_pin": "PB6",  "functions": ["gpio", "uart", "i2c"] },
      "d14": { "mcu_pin": "PB7",  "functions": ["gpio", "uart", "i2c"] },
