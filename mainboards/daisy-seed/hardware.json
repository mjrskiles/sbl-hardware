  "claims": {
    "pins": [
      {
        "mcu_pin": "PC7",
        "function": "gpio",
        "direction": "out",
        "id": "status_led",
        "active_low": false
      }
    ]
  },

  "config": {
    "hse_mhz": 16,
    "sysclk_mhz": 480
  }
