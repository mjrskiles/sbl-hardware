    },
    "buses": {
      "spi1": {
        "type": "spi",
        "mcu_peripheral": "SPI1",
        "pins": {
          "sck": "PG11",
          "miso": "PB4",
          "mosi": "PB5"
        }
      },
      "i2c1": {
        "type": "i2c",
        "mcu_peripheral": "I2C1",
        "pins": {
          "scl": "PB8",
          "sda": "PB9"
        }
      },
      "uart1": {
        "type": "uart",
        "mcu_peripheral": "USART1",
        "pins": {
          "tx": "PB6",
          "rx": "PB7"
        }
      }
    }
