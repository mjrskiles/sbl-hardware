{
  "$schema": "https://soundbytelabs.net/schema/hardware.schema.json",
  "version": "1.0",
  "board": {
    "name": "daisy-pod",
    "revision": "1.0",
    "attaches_to": "boards/daisy-seed"
  },
  "claims": {
    "gpio": [
      {
        "id": "led1_red",
        "pin": "d20",
        "direction": "out",
        "active_low": false
      },
      {
        "id": "led1_green",
        "pin": "d19",
        "direction": "out",
        "active_low": false
      },
      {
        "id": "led1_blue",
        "pin": "d18",
        "direction": "out",
        "active_low": false
      },
      {
        "id": "led2_red",
        "pin": "d17",
        "direction": "out",
        "active_low": false
      },
      {
        "id": "led2_green",
        "pin": "d24",
        "direction": "out",
        "active_low": false
      },
      {
        "id": "led2_blue",
        "pin": "d23",
        "direction": "out",
        "active_low": false
      },
      {
        "id": "button1",
        "pin": "d27",
        "direction": "in",
        "pull": "up",
        "active_low": true
      },
      {
        "id": "button2",
        "pin": "d28",
        "direction": "in",
        "pull": "up",
        "active_low": true
      },
      {
        "id": "encoder_a",
        "pin": "d26",
        "direction": "in",
        "pull": "up"
      },
      {
        "id": "encoder_b",
        "pin": "d25",
        "direction": "in",
        "pull": "up"
      },
      {
        "id": "encoder_click",
        "pin": "d13",
        "direction": "in",
        "pull": "up",
        "active_low": true
      }
    ],
    "adc": [
      {
        "id": "knob1",
        "pin": "a6"
      },
      {
        "id": "knob2",
        "pin": "a0"
      }
    ]
  }
}
